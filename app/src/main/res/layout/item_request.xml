<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_layout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_recycler_left"
    android:layout_marginRight="@dimen/margin_recycler_left"
    android:layout_marginTop="@dimen/margin_activity_left"
    android:layout_marginBottom="@dimen/margin_activity_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginLeft="4dp"
        android:textSize="16sp"
        android:text="Nama"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="4dp"
        android:text="Email"
        android:textSize="14sp" />

</LinearLayout>